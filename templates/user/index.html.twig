{% extends 'base.html.twig' %}

{% block title %}members{% endblock %}

{% block body %}
  <div class="container">          
    <h1>Nos membres</h1>

    <div class="row">
      {% for user in users %}
        <div class="col-md-4">
          <div class="card" style="">
            <img src="{{user.picture}}" class="card-img-top img-fluid" alt="{{ user.userType }}" style="height: 240px;">
            <div class="card-body">
                <h5 class="card-title">{{ user.firstname|upper }} {{ user.lastname|upper }}</h5>
                <p>{{ user.userType|capitalize }}</p>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div><!-- /.container -->
{% endblock %}

